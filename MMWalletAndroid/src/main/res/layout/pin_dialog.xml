<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/APP_MAIN_COLOR"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <EditText
            android:id="@+id/Dialog_PIN_EditText_PIN"
            android:layout_width="140dp"

            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_send_money_linear"

            android:hint="@string/hintMerchantPin"
            android:inputType="numberPassword"
            android:paddingLeft="10dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/Dialog_PIN_SUBMIT"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/Dialog_PIN_EditText_PIN"
            android:background="@drawable/error_button_background"
            android:text="@string/SUBMIT" />
        <!--        <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/Dialog_PIN_TextView_PIN"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/hintMerchantPin"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center_vertical"
                    android:background="@android:color/transparent"/>-->


    </RelativeLayout>
</LinearLayout>