    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="720">
    <shape
        android:innerRadiusRatio="3"
        android:shape="ring"
        android:thicknessRatio="8"
        android:useLevel="false">
        <gradient
            android:centerColor="@color/APP_MAIN_COLOR"
            android:centerY="0.50"
            android:endColor="@color/OFF_WHITE"
            android:startColor="@color/APP_MAIN_COLOR"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>

