<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="top"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:background="@color/ACTIONBAR_THEME_COLOR">

    <ImageView
        android:id="@+id/Actionbar_Icon_Image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/youtap"
        android:layout_gravity="center_vertical"
        />
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/WHITE"/>
    <TextView
        android:id="@+id/Actionbar_TextView_Title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:textColor="@color/TEXT_NORMAL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="@string/TAB_1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_weight="4"
        android:background="@color/ACTIONBAR_THEME_COLOR"/>
    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/WHITE"/>
    <ImageView
        android:id="@+id/Actionbar_ImageView_Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/context_menu"

        android:layout_gravity="center_vertical"
        android:visibility="gone"/>
</LinearLayout>
